# Security
SECRET_KEY=generate_a_secure_random_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Frontend URL (Where to redirect after login)
# Local: http://localhost:5173
# Live: https://your-frontend-app.onrender.com
FRONTEND_URL=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Local: http://localhost:8000/auth/google/callback
# Live: https://your-backend-app.onrender.com/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Local: http://localhost:8000/auth/github/callback
# Live: https://your-backend-app.onrender.com/auth/github/callback
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback
